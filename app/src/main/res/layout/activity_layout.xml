<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="com.lexing360.app.lexingupdate.BooleanUtils" />

        <import type="android.text.TextUtils" />

        <variable
            name="model"
            type="com.lexing360.app.lexingupdate.model.LayoutModel.DataBean" />

        <variable
            name="checked"
            type="com.lexing360.app.lexingupdate.ui.LayoutActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/preview_layout" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/style_CommonTextView"
                    android:text="messageSettingId："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_messageSettingId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="最新需求-1/询价-2/报价-3"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="1" />


                <TextView
                    style="@style/style_CommonTextView"
                    android:text="name："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="最新需求/询价/报价"
                    android:singleLine="true"
                    android:text="@{model.name}" />

                <TextView
                    style="@style/style_CommonTextView"
                    android:text="redDot："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_reddot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@{model.redDot}" />

                <TextView
                    style="@style/style_CommonTextView"
                    android:text="avatarurl："
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_avatarurl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_avatarurl_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{model.avatarUrl}"
                        android:text="true" />

                    <RadioButton
                        android:id="@+id/rb_avatarurl_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:checked="@{model.avatarUrl?model.avatarUrl == false:model.avatarUrl == false}"
                        android:text="false" />
                </RadioGroup>

                <TextView
                    style="@style/style_CommonTextView"
                    android:text="integration："
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_integration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_integration_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{model.integration}"
                        android:text="true" />

                    <RadioButton
                        android:id="@+id/rb_integration_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:checked="@{model.integration?model.integration == false:model.integration == false}"
                        android:text="false" />
                </RadioGroup>

                <TextView
                    style="@style/style_CommonTextView"
                    android:layout_marginTop="10dp"
                    android:text="firstLabelOfLineOne："
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_fontType1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_fontType1_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LARGE" />

                    <RadioButton
                        android:id="@+id/rb_fontType1_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="MIDDLE" />

                    <RadioButton
                        android:id="@+id/rb_fontType1_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="SMALL" />
                </RadioGroup>

                <EditText
                    android:id="@+id/textColor1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="textColor1"
                    android:singleLine="true"
                    android:text="@{model.firstLabelOfLineOne.textColor}" />

                <EditText
                    android:id="@+id/et_hide1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="hint1"
                    android:orientation="horizontal"
                    android:text="@{BooleanUtils.convertToString(model.firstLabelOfLineOne.hide)}" />

                <TextView
                    style="@style/style_CommonTextView"
                    android:layout_marginTop="10dp"
                    android:text="secondLabelOfLineOne："
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_fontType2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_fontType2_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LARGE" />

                    <RadioButton
                        android:id="@+id/rb_fontType2_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="MIDDLE" />

                    <RadioButton
                        android:id="@+id/rb_fontType2_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="SMALL" />
                </RadioGroup>

                <EditText
                    android:id="@+id/textColor2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="textColor2"
                    android:singleLine="true"
                    android:text="@{model.secondLabelOfLineOne.textColor}" />

                <EditText
                    android:id="@+id/et_hide2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="hint2"
                    android:orientation="horizontal"
                    android:text="@{BooleanUtils.convertToString(model.secondLabelOfLineOne.hide)}" />

                <TextView
                    style="@style/style_CommonTextView"
                    android:layout_marginTop="10dp"
                    android:text="firstLabelOfLineTwo："
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_fontType3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_fontType3_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LARGE" />

                    <RadioButton
                        android:id="@+id/rb_fontType3_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="MIDDLE" />

                    <RadioButton
                        android:id="@+id/rb_fontType3_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="SMALL" />
                </RadioGroup>

                <EditText
                    android:id="@+id/textColor3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="textColor3"
                    android:singleLine="true"
                    android:text="@{model.firstLabelOfLineTwo.textColor}" />

                <EditText
                    android:id="@+id/et_hide3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="hint3"
                    android:orientation="horizontal"
                    android:text="@{BooleanUtils.convertToString(model.firstLabelOfLineTwo.hide)}" />

                <TextView
                    style="@style/style_CommonTextView"
                    android:layout_marginTop="10dp"
                    android:text="secondLabelOfLineTwo："
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_fontType4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_fontType4_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LARGE" />

                    <RadioButton
                        android:id="@+id/rb_fontType4_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="MIDDLE" />

                    <RadioButton
                        android:id="@+id/rb_fontType4_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="SMALL" />
                </RadioGroup>

                <EditText
                    android:id="@+id/textColor4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="textColor4"
                    android:singleLine="true"
                    android:text="@{model.secondLabelOfLineTwo.textColor}" />

                <EditText
                    android:id="@+id/et_hide4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="hint4"
                    android:orientation="horizontal"
                    android:text="@{BooleanUtils.convertToString(model.secondLabelOfLineTwo.hide)}" />

                <TextView
                    android:id="@+id/bt_put"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="put" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>